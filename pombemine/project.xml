<project type="bio">
  <property name="target.model" value="genomic"/>
  <property name="common.os.prefix" value="common"/>
  <property name="intermine.properties.file" value="pombemine.properties"/>
  <property name="default.intermine.properties.file" location="../default.intermine.integrate.properties"/>

  <sources>
    <source name="pombe-gff" type="pombe-gff">
      <property name="gff3.taxonId" value="4896"/>
      <property name="src.data.dir" location="/shared/data/pombe/pombe-genome/gff"/>
    </source>
    <source name="pombe-chromosome-fasta" type="fasta">
      <property name="source.name" value="fasta"/>
      <property name="fasta.includes" value="MAL*.fasta"/>
      <property name="fasta.taxonId" value="4896"/>
      <property name="src.data.dir" location="/shared/data/pombe/pombe-genome/fasta"/>
    </source>
    <source name="uniprot-pombe" type="uniprot">
      <property name="uniprot.organisms" value="4896"/>
      <property name="src.data.dir" location="/shared/data/uniprot/7.7/"/>
    </source>
    <source name="go" type="go">
      <property name="src.data.file" location="/shared/data/pombe/gene_ontology/gene_ontology.obo"/>
    </source>
    <source name="go-annotation-gene-identifier" type="go-annotation" dump="true">
      <property name="ontologyfile" location="/shared/data/pombe/gene_ontology/gene_ontology.obo"/>
      <property name="geneattribute" value="identifier"/>
      <property name="src.data.dir" location="/shared/data/pombe/go-annotation"/>
    </source>
    <source name="inparanoid-orthologue" type="orthologue" dump="true">
      <property name="src.data.dir" location="/shared/data/pombe/inparanoid/2006-04-16/"/>
    </source>
    <source name="psi-intact" type="psi">
      <property name="src.data.dir" location="/shared/data/pombe/psi/intact/2006-05-26"/>
      <property name="organisms" value="4896"/>
    </source>
    <source name="entrez-organism" type="entrez-organism" dump="true">
      <property name="tgt.xml.file" location="build/organisms.xml"/>
    </source>
  </sources>

  <post-processing>
    <post-process name="create-references"/>
    <post-process name="update-orthologues"/>
    <post-process name="make-spanning-locations"/>
    <post-process name="create-chromosome-locations-and-lengths"/>
    <post-process name="transfer-sequences" dump="true"/>

    <post-process name="do-sources"/>

    <post-process name="set-collection-counts"/>
  </post-processing>

</project>

