<aspects>
  <aspect name="Genomics">
    <subtitle>Genome annotation</subtitle>
    <icon-image>model/genomics.gif</icon-image>
    <large-image>model/genomics.gif</large-image>
    <intro-text>
      The gene structure and other genome annotation in PlantMine are provided by
      a variety of curated source databases.  In most cases PlantMine includes
      all genome features that have chromosomal locations.
    </intro-text>
    <tile-name>model/genomics.jsp</tile-name>
    <starting-points>
      Gene Chromosome
    </starting-points> 
    <aspect-source name="TAIR" url="http://www.arabidopsis.org"/>
  </aspect>

  <aspect name="Proteins">
    <subtitle>Protein and proteomics&lt;br/&gt;data</subtitle>
    <icon-image>model/proteins.png</icon-image>
    <large-image>model/proteins.png</large-image>
    <intro-text>
      Protein annotation (including family and domain annotation) from UniProt.      .
    </intro-text>
    <tile-name>model/proteins.jsp</tile-name>
    <starting-points>Protein</starting-points>
    <aspect-source name="UniProt" url="http://www.uniprot.org"/>
  </aspect>

