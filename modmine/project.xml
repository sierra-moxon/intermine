<project type="bio">
  <property name="target.model" value="genomic"/>
  <property name="common.os.prefix" value="common"/>
  <property name="intermine.properties.file" value="modmine.properties"/>
  <property name="default.intermine.properties.file" location="../default.intermine.integrate.properties"/>
  <sources>
		<source name="modmine-static" type="intermine-items-xml-file" dump="true">
			<!--      <property name="src.data.file" location="datasets.xml"/> -->
			<property name="src.data.file" location="resources/projects.xml"/>
		</source>
    <source name="modencode-metadata" type="chado-db">
      <property name="source.db.name" value="modencode-metadata"/>
      <property name="dataSourceName" value="FlyBase"/>
      <property name="dataSetTitle" value="FlyBase Drosophila melanogaster data set"/>
      <property name="processors"
                value="org.intermine.bio.dataconversion.ModEncodeMetaDataProcessor"/>
    </source>
    <source name="chado-db-flybase-dmel" type="chado-db">
      <property name="source.db.name" value="flybase"/>
      <property name="genus" value="Drosophila"/>
      <property name="species" value="melanogaster"/>
      <property name="taxonId" value="7227"/>
      <property name="dataSourceName" value="FlyBase"/>
      <property name="dataSetTitle" value="FlyBase Drosophila melanogaster data set"/>
      <property name="processors"
                value="org.intermine.bio.dataconversion.FlyBaseModuleProcessor"/>
    </source>
    <source name="chado-db-wormbase-c_elegans" type="chado-db" dump="true">
      <property name="source.db.name" value="wormbase"/>
      <property name="genus" value="Caenorhabditis"/>
      <property name="species" value="elegans"/>
      <property name="taxonId" value="6239"/>
      <property name="dataSourceName" value="WormBase"/>
      <property name="dataSetTitle" value="WormBase C.elegans data set"/>
      <property name="processors"
                value="org.intermine.bio.dataconversion.WormBaseModuleProcessor"/>
    </source>
    <source name="uniprot" type="uniprot">
      <property name="uniprot.organisms" value="7227 6239"/> 
      <property name="src.data.dir" location="/shared/data/uniprot/current"/>
      <property name="createinterpro" value="true"/>
      <property name="use.split.files" value="true"/>
    </source>
    <source name="uniprot-keywords" type="uniprot-keywords">
      <property name="src.data.dir" location="/shared/data/uniprot/current"/>
      <property name="src.data.dir.includes" value="keydef.xml"/>
    </source>
    <source name="interpro" type="interpro" dump="true">
      <property name="src.data.dir" location="/shared/data/interpro/current"/>
    </source>
    <source name="inparanoid-orthologue" type="orthologue">
      <property name="src.data.dir" location="/shared/data/modmine/inparanoid-orthologue/current/"/>
    </source>
    <source name="go" type="go">
      <property name="src.data.file" location="/shared/data/go-annotation/gene_ontology.obo"/>
    </source>
    <source name="go-annotation" type="go-annotation" dump="true">
      <property name="ontologyfile" location="/shared/data/go-annotation/gene_ontology.obo"/>
      <property name="src.data.dir" location="/shared/data/modmine/go-annotation/"/>
      <property name="src.data.dir.includes" value="*/gene_association*"/>
    </source>
    <source name="flybase-dmel-gene-fasta" type="fasta">
      <property name="fasta.taxonId" value="7227"/>
      <property name="fasta.className" value="org.flymine.model.genomic.Gene"/>
      <property name="fasta.includes" value="dmel-all-gene-*.fasta"/>
      <property name="src.data.dir" location="/shared/data/flybase/dmel/release_5_4/fasta"/>
    </source>
    <source name="flybase-dmel-cds-fasta" type="fasta">
      <property name="fasta.loaderClassName" 
                value="org.intermine.bio.dataconversion.FlyBaseCDSFastaLoaderTask"/>
      <property name="fasta.taxonId" value="7227"/>
      <property name="fasta.className" value="org.flymine.model.genomic.CDS"/>
      <property name="fasta.classAttribute" value="secondaryIdentifier"/>
      <property name="fasta.includes" value="dmel-all-CDS-*.fasta"/>
      <property name="src.data.dir" location="/shared/data/flybase/dmel/release_5_5/fasta"/>
    </source>
    <source name="flybase-dmel-5prime-utr-fasta" type="fasta">
      <property name="fasta.loaderClassName" value="org.intermine.bio.dataconversion.FlyBaseUTRFastaLoaderTask"/>
      <property name="fasta.taxonId" value="7227"/>
      <property name="fasta.className" value="org.flymine.model.genomic.FivePrimeUTR"/>
      <property name="fasta.classAttribute" value="primaryIdentifier"/>
      <property name="fasta.includes" value="dmel-all-five_prime_UTR-*.fasta"/>
      <property name="src.data.dir" location="/shared/data/flybase/dmel/release_5_4/fasta"/>
    </source>
    <source name="flybase-dmel-3prime-utr-fasta" type="fasta">
      <property name="fasta.loaderClassName" value="org.intermine.bio.dataconversion.FlyBaseUTRFastaLoaderTask"/>
      <property name="fasta.taxonId" value="7227"/>
      <property name="fasta.className" value="org.flymine.model.genomic.ThreePrimeUTR"/>
      <property name="fasta.classAttribute" value="primaryIdentifier"/>
      <property name="fasta.includes" value="dmel-all-three_prime_UTR-*.fasta"/>
      <property name="src.data.dir" location="/shared/data/flybase/dmel/release_5_4/fasta"/>
    </source>
    <source name="wormbase-c_elegans-chromosome-fasta" type="fasta">
      <property name="fasta.taxonId" value="6239"/>
      <property name="fasta.className" value="org.flymine.model.genomic.Chromosome"/>
      <property name="fasta.includes" value="*chromosome*.fasta"/>
      <property name="src.data.dir" location="/shared/data/wormbase/ws175"/>
    </source>
    <source name="entrez-organism" type="entrez-organism">
      <!-- this source finds the taxon ids in the objectstore, retrieves
           species name and genus from Entrez into an InterMine format XML
           file, loads that file into a target items DB, then into the final
           objectstore -->
      <property name="src.data.file" location="build/organisms.xml"/>
    </source>
    <source name="update-publications" type="update-publications">
      <!-- this source finds the publication ids (pubmed ids) in the
           objectstore, retrieves the details of the publication from Entrez
           into an InterMine format XML file, loads that file into a target
           items DB, then into the final objectstore -->
      <property name="src.data.file" location="build/publications.xml"/>
    </source>
 
  </sources>
  <post-processing>
    <post-process name="create-utr-references"/>
    <post-process name="transfer-sequences"/>
    <post-process name="create-references"/>
    <post-process name="create-intergenic-region-features"/>
    <post-process name="create-overlap-relations-flymine"/>

    <post-process name="do-sources"/>

    <post-process name="synonym-update"/>
    <post-process name="create-attribute-indexes"/>
    <post-process name="precompute-queries"/>
    <post-process name="summarise-objectstore"/>
  </post-processing>
</project>

