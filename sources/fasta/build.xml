<!--
  a bit of an odd source as it writes straight to the production database
  and deals with model objects (and therefore the task sub-project depends on
  the production model).
-->
<project name="fasta" default="default" basedir=".">
  <description>build, test, package fasta</description>
  
  <import file="../../imbuild/source.xml"/>
  
  <!-- no retrieve of translate -->
  <target name="retrieve"/>
  <target name="translate"/>
  
  <target name="load" depends="init, -init-deps">
    <taskdef name="read-fasta"
      classname="org.flymine.task.FastaReadTask"
      classpathref="task.class.path"/>
    <read-fasta className="${fasta.className}" keyFieldName="${fasta.keyFieldName}"
                idSuffix="${fasta.idSuffix}" organismAbbreviation="${fasta.orgAbbrev}"
                oswAlias="osw.production">
      <fileset dir="${src.data.dir}" includes="${fasta.includes}"/>
    </read-fasta>
  </target>
  
</project>

