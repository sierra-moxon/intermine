<project type="bio">
  <property name="target.model" value="genomic"/>
  <property name="common.os.prefix" value="common"/>
  <property name="intermine.properties.file" value="malariamine.properties"/>
  <property name="default.intermine.properties.file" location="../default.intermine.integrate.properties"/>

  <sources>
    <source name="malaria-gff" type="malaria-gff" standalone="true" dump="true">
      <property name="gff3.taxonId" value="36329"/>
      <property name="src.data.dir" location="/shared/data/malaria/malaria-genome/gff"/>
    </source>
    <source name="uniprot-malaria" type="uniprot">
      <property name="uniprot.organisms" value="36329"/>
      <property name="src.data.dir" location="/shared/data/uniprot/7.7_sprot_only/"/>
    </source>
    <source name="go" type="go">
      <property name="src.data.file" location="/shared/data/malaria/gene_ontology/gene_ontology.obo"/>
    </source>
    <source name="inparanoid-orthologue" type="orthologue">
      <property name="src.data.dir" location="/shared/data/malaria/inparanoid/2006-04-16/"/>
    </source>
    <source name="go-annotation-gene-identifier" type="go-annotation">
      <property name="ontologyfile" location="/shared/data/gene_ontology/gene_ontology.obo"/>
      <property name="geneattribute" value="identifier"/>
      <property name="src.data.dir" location="/shared/data/malaria/go-annotation"/>
    </source>
    <source name="malaria-chromosome-fasta" type="fasta">
      <property name="source.name" value="fasta"/>
      <property name="fasta.includes" value="MAL*.fasta"/>
      <property name="fasta.taxonId" value="36329"/>
      <property name="src.data.dir" location="/shared/data/malaria/malaria-genome/fasta"/>
    </source>
    <source name="entrez-organism" type="entrez-organism">
      <!-- this source finds the taxon ids in the objectstore, retrieves
           species name and genus from Entrez into an InterMine format XML
           file, loads that file into a target items DB, then into the final
           objectstore -->
      <property name="tgt.xml.file" location="build/organisms.xml"/>
    </source>
  </sources>

  <post-processing>
    <create-utr-references/>
    <calculate-locations/>
    <create-references/>
    <update-orthologues/>
    <make-spanning-locations/>
    <create-chromosome-locations-and-lengths/>
    <create-symmetrical-relation-references/>
    <transfer-sequences/>

    <do-sources/>

    <set-collection-counts/>
    <create-flybase-to-uniprot-refs/>

  </post-processing>    

</project>

